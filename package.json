{
    "name": "mew-mcp",
    "version": "1.0.0",
    "description": "Mew Control Protocol - A TypeScript client for the Mew API",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "bin": {
        "mew-mcp": "dist/mcp.js"
    },
    "scripts": {
        "prebuild": "mkdir -p dist && rm -rf dist/*",
        "build": "esbuild src/mcp.ts --bundle --outfile=dist/mcp.bundle.js --platform=node --format=esm --external:path --external:fs --external:os && tsc --emitDeclarationOnly",
        "start:mcp": "node dist/mcp.js",
        "test": "jest",
        "lint": "eslint src/**/*.ts",
        "format": "prettier --write src/**/*.ts"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^4.19.2",
        "node-fetch": "^3.3.2"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.19",
        "@types/node-fetch": "^2.6.11",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "esbuild": "^0.25.4",
        "eslint": "^8.56.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    }
}
